$ Include the sha256 function from the hashlib library
INCLUDE sha256 FROM hashlib;
INCLUDE sys;

$ Define the print function
DEFINE FUNC verify ARGS pswd pswd_hash;
    $ Hash input
    CALL sha256 ARGS (pswd);

    $ hex digest it
    CALL RETURN.hexdigest;

    SET hash TO RETURN;

    SET counter TO 0;

    SET exit TO False;
    
    $ if input is equal to the hash of "hi"
    IF hash == pswd_hash;

        CALL sys.stdout.write ARGS ("Correct password!\n");

    ELSE;
        
        CALL sys.stdout.write ARGS ("Invalid password!\n");

    ENDIF;

$ End of function definition
EXIT FUNC;
