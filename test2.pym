$ Include the sha256 function from the hashlib library
INCLUDE sha256 FROM hashlib;

$ Define the print function
DEFINE FUNC print;

    CALL input ARGS ("input: ");

    $ Hash input
    CALL sha256 ARGS (RETURN.encode());

    $ hex digest it
    CALL RETURN.hexdigest;

    SET hash TO RETURN;

    SET counter TO 0;
    
    $ if input is equal to the hash of "hi" and the counter is less than or equal to 10
    IF hash == "8f434346648f6b96df89dda901c5176b10a6d83961dd3c1ac88b59b2dc327aa4";

    WHILE counter < 10;
    
    CALL sys.stdout.write ARGS ("nice\n");

    INCREMENT counter BY 1;

    ENDWHILE;

    ELSE;

    CALL sys.stdout.write ARGS ("invalid password :/\n");

    ENDIF;

    DECREMENT counter BY 5;

    $ CALL breakpoint;

    CALL sys.stdout.write ARGS ("Bye!\n");
    CALL sys.exit;

$ End of function definition
EXIT FUNC;
